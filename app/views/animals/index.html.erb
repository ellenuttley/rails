<h1 class="text-2xl font-bold mb-4">Animals</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @animals.each do |animal| %>
    <div class="bg-white shadow-md rounded-lg p-4">
      <h2 class="text-xl font-semibold"><%= animal.name %></h2>
      <p class="text-gray-600">
        <%= animal.dinosaur ? 'Dinosaur' : 'Not a Dinosaur' %> |
        <%= animal.marine ? 'Marine' : 'Not Marine' %> |
        <%= animal.researched ? 'Researched' : 'Not Researched' %>
      </p>
      <% if animal.animal_terrains.any? %>
        <h3 class="text-lg font-semibold mt-2">Terrains:</h3>
        <ul class="list-disc list-inside">
          <% animal.animal_terrains.each do |animal_terrain| %>
            <li><%= animal_terrain.terrain.name %>: <%= animal_terrain.percentage %>%</li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>